<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx" fx:controller="cn.xzlei.luxurycarjavafx.controller.CarTypeController">
    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets left="10" right="10" top="30"/>
        </padding>
        <Button text="刷新" styleClass="primaryButton" onAction="#queryAll" style="-fx-background-color: #00bfff;">
            <graphic>
                <FontIcon fill="red" iconLiteral="fas-sync-alt"/>
            </graphic>
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>

        <Button text="添加"  onAction="#openAddCarTypeDialog" styleClass="primaryButton" style="-fx-background-color: #00bc00;">
            <graphic>
                <FontIcon fill="red" iconLiteral="fas-plus"/>
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="carTypeTable" style="-fx-padding: 10;-fx-border-width: 0;-fx-border-color: none;" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="未查询到数据"/>
        </placeholder>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <TableColumn text="汽车类型ID" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="id" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="汽车品牌名" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="typeName" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="操作" prefWidth="150" fx:id="actionColumn">
            <!-- 添加一个空的cellValueFactory以避免操作列显示null -->
            <cellValueFactory>
                <PropertyValueFactory property="" />
            </cellValueFactory>
        </TableColumn>
    </TableView>
</VBox>
