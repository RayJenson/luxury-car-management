<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cn.xzlei.luxurycarjavafx.controller.InventoryController">

    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets left="10" right="10" top="30"/>
        </padding>
        <Button text="刷新" styleClass="primaryButton" onAction="#queryAll" style="-fx-background-color: #00bfff;">
            <graphic>
                <FontIcon fill="red" iconLiteral="fas-sync-alt"/>
            </graphic>
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>
    </HBox>

    <TableView fx:id="inventoryTable" style="-fx-padding: 10;-fx-border-width: 0;-fx-border-color: none;" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
