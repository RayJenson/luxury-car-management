<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="cn.xzlei.luxurycarjavafx.controller.ReportController"
      prefHeight="400.0" prefWidth="600.0">

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="进货入库统计">
                <content>
                    <!-- 进货入库统计内容区域 -->
                    <VBox>
                        <TableView fx:id="purchaseOrderTable"
                                   style="-fx-padding: 10;-fx-border-width: 0;-fx-border-color: none;"
                                   VBox.vgrow="ALWAYS">
                            <placeholder>
                                <Label text="未查询到数据"/>
                            </placeholder>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>

                            <TableColumn text="订货编号" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="orderId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="供应商编号" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="supplierId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="商品编号" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="productId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="订货数量" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="orderQuantity"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="订货日期" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="orderDate"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="付款方式" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="payMethod"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="备注" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="note"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="是否进货" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="isPurchase"/>
                                </cellValueFactory>
                            </TableColumn>
                        </TableView>
                        <HBox style="-fx-padding: 15;">
                            <children>
                                <Pagination fx:id="purchaseOrderPagination" maxPageIndicatorCount="5" pageCount="10" HBox.hgrow="ALWAYS"/>
                                <Button onAction="#purchaseStats" styleClass="primaryButton" mnemonicParsing="false" style="-fx-margin: 0 15px;">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-chart-pie"/>
                                    </graphic>
                                    <text>统计</text>
                                </Button>
                            </children>
                        </HBox>
                    </VBox>
                </content>
            </Tab>
            <Tab text="销售统计">
                <content>
                    <!-- 销售统计内容区域 -->
                    <VBox style="-fx-padding: 15;">
                        <TableView fx:id="salesRecordTable"
                                   style="-fx-padding: 10;-fx-border-width: 0;-fx-border-color: none;" VBox.vgrow="ALWAYS">
                            <placeholder>
                                <Label text="未查询到数据"/>
                            </placeholder>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>

                            <TableColumn text="销售单号" prefWidth="100">
                                <cellValueFactory>
                                    <PropertyValueFactory property="salesId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="客户编号" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="customerId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="员工编号" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="empId"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="销售日期" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="saleDate"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="本单总金额" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="totalAmount"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="支付方式" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="payMethod"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="状态" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="status"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="地址" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="address"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="备注" prefWidth="150">
                                <cellValueFactory>
                                    <PropertyValueFactory property="note"/>
                                </cellValueFactory>
                            </TableColumn>
                        </TableView>
                        <HBox style="-fx-padding: 15;">
                            <children>
                                <Pagination fx:id="salesRecordPagination" maxPageIndicatorCount="5" pageCount="10" HBox.hgrow="ALWAYS"/>
                                <Button onAction="#salesRecordStats"  styleClass="primaryButton" mnemonicParsing="false" style="-fx-margin: 0 15px;">
                                    <graphic>
                                        <FontIcon iconLiteral="fas-chart-pie"/>
                                    </graphic>
                                    <text>统计</text>
                                </Button>
                            </children>
                        </HBox>
                    </VBox>
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
