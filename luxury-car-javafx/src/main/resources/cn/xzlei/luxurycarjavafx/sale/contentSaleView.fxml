<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cn.xzlei.luxurycarjavafx.controller.SalesRecordController">

    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets left="10" right="10" top="30"/>
        </padding>
        <Button text="刷新" styleClass="primaryButton" onAction="#queryAll" style="-fx-background-color: #00bfff;">
            <graphic>
                <FontIcon fill="red" iconLiteral="fas-sync-alt"/>
            </graphic>
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </Button>

        <Button text="添加"  onAction="#openAddSalesRecordDialog" styleClass="primaryButton" style="-fx-background-color: #00bc00;">
            <graphic>
                <FontIcon fill="red" iconLiteral="fas-plus"/>
            </graphic>
        </Button>
    </HBox>

    <TableView fx:id="salesRecordTable" style="-fx-padding: 10;-fx-border-width: 0;-fx-border-color: none;" VBox.vgrow="ALWAYS">
        <placeholder>
            <Label text="未查询到数据"/>
        </placeholder>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <TableColumn text="销售单号" prefWidth="100">
            <cellValueFactory>
                <PropertyValueFactory property="salesId" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="客户编号" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="customerId" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="员工编号" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="empId" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="销售日期" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="saleDate" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="本单总金额" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="totalAmount" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="支付方式" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="payMethod" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="状态" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="status" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="地址" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="address" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="备注" prefWidth="150">
            <cellValueFactory>
                <PropertyValueFactory property="note" />
            </cellValueFactory>
        </TableColumn>
        <TableColumn text="操作" prefWidth="180" fx:id="actionColumn">
            <!-- 添加一个空的cellValueFactory以避免操作列显示null -->
            <cellValueFactory>
                <PropertyValueFactory property="" />
            </cellValueFactory>
        </TableColumn>
    </TableView>


</VBox>
