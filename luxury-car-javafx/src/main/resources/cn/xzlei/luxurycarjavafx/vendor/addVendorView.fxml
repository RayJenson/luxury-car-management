<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<DialogPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.xzlei.luxurycarjavafx.controller.AddVendorController"
 fx:id="dialog">
    <content>
        <GridPane hgap="10" vgap="10" prefWidth="600" style="-fx-padding: 10;">
            <!-- 第一列 -->
            <Label text="供应商名称:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="vendorNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="联系人:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="contactNameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="联系电话:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="contactPhoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- 第二列 -->
            <Label text="地址:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="addressField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="银行账号:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="accountField" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

            <Label text="邮箱:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="emailField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>


        </GridPane>
    </content>
</DialogPane>
