<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cn.xzlei.luxurycarjavafx.controller.OperationEmpController">
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
            <!-- 设置列约束 -->
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="150" />
                <ColumnConstraints halignment="RIGHT" />
                <ColumnConstraints prefWidth="150" />
            </columnConstraints>

            <!-- 第一行 -->
            <Label text="员工姓名:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="请输入员工姓名"/>

            <Label text="员工性别:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <ComboBox fx:id="genderComboBox" GridPane.columnIndex="3" GridPane.rowIndex="0" promptText="请选择性别">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="男" />
                        <String fx:value="女" />
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- 第二行 -->
            <Label text="账号名:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="accountField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="请输入账号名"/>

            <Label text="部门:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <ComboBox fx:id="deptComboBox" GridPane.columnIndex="3" GridPane.rowIndex="1" promptText="请选择部门"/>

            <!-- 第三行 -->
            <Label text="员工职位:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="jobField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="请输入员工职位"/>

            <Label text="手机号码:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="phoneField" GridPane.columnIndex="3" GridPane.rowIndex="2" promptText="请输入手机号码"/>

            <!-- 第四行 -->
            <Label text="员工薪资:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="请输入员工薪资"/>

            <!-- 地址行 -->
            <Label text="员工住址:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3" promptText="请输入员工住址"/>

        </GridPane>
    </content>
</DialogPane>
